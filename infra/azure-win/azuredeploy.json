{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "siteName": {
            "type": "string",
            "metadata": {
                "description": "Name of azure web app. The application will be accessible from https://<siteName>.azurewebsites.net"
            }
        },
        "appServicePlanName": {
            "type": "string",
            "metadata": {
                "description": "Name of hosting plan"
            }
        },
        "skuName": {
            "type": "string",
            "allowedValues": [
                "F1",
                "D1",
                "B1",
                "B2",
                "B3",
                "S1",
                "S2",
                "S3",
                "P1",
                "P2",
                "P3"
            ],
            "defaultValue": "F1",
            "metadata": {
                "description": "Sku for the App service plan"
            }
        },
        "capacity": {
            "type": "int",
            "defaultValue": 1,
            "metadata": {
                "description": "Current number of instances assigned to the resource."
            }
        },
        "mysqlServerName": {
            "type": "string",
            "metadata": {
                "description": "Server Name for Azure database for MySQL"
            }
        },
        "administratorLogin": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "Database administrator login name"
            }
        },
        "administratorPassword": {
            "type": "securestring",
            "minLength": 8,
            "metadata": {
                "description": "Database administrator password"
            }
        },
        "databaseForMySqlName": {
            "type": "string",
            "metadata": {
                "description": "Name of the Azure Database for MySQL"
            }
        },
        "databaseSkuName": {
            "type": "string",
            "defaultValue": "GP_Gen5_2",
            "allowedValues": [
                "B_Gen5_1",
                "B_Gen5_2",
                "GP_Gen5_2",
                "GP_Gen5_4",
                "GP_Gen5_8",
                "GP_Gen5_16",
                "GP_Gen5_32",
                "MO_Gen5_2",
                "MO_Gen5_4",
                "MO_Gen5_8",
                "MO_Gen5_16",
                "MO_Gen5_32"
            ],
            "metadata": {
                "description": "Azure database for MySQL sku name"
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "defaultValue": "[deployment().properties.templateLink.uri]",
            "metadata": {
                "description": "The base URI where artifacts required by this template are located."
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "defaultValue": "",
            "metadata": {
                "description": "The sasToken required to access _artifactsLocation."
            }
        },
        "tags": {
            "type": "object",
            "defaultValue": {
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "The region to deploy the resources into"
            }
        }
    },
    "functions": [
    ],
    "variables": {
    },
    "resources": [
        {
            "name": "appserviceNestedDeployment",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(parameters('_artifactsLocation'), concat('nestedTemplates/appservice.json', parameters('_artifactsLocationSasToken')))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "siteName": {
                        "value": "[parameters('siteName')]"
                    },
                    "appServicePlanName": {
                        "value": "[parameters('appServicePlanName')]"
                    },
                    "skuName": {
                        "value": "[parameters('skuName')]"
                    },
                    "capacity": {
                        "value": "[parameters('capacity')]"
                    },
                    "tags": {
                        "value": "[parameters('tags')]"
                    }
                }
            }
        },
        {
            "name": "firewallRulesDeployment",
            "type": "Microsoft.Resources/deployments",
            "dependsOn": [
                "appserviceNestedDeployment"
            ],
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[uri(parameters('_artifactsLocation'), concat('nestedTemplates/firewallrules.json', parameters('_artifactsLocationSasToken')))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "inputArray": {
                        "value": "[reference('appserviceNestedDeployment').outputs.possibleOutboundIps.value]"
                    },
                    "ruleNamePrefix": {
                        "value": "AppServiceIp"
                    }
                }
            }
        },
        {
            "name": "mysqlNestedDeployment",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "dependsOn": [
                "firewallRulesDeployment"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('_artifactsLocation'), '/nestedTemplates/mysql.json', parameters('_artifactsLocationSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "mysqlServerName": {
                        "value": "[parameters('mysqlServerName')]"
                    },
                    "administratorLogin": {
                        "value": "[parameters('administratorLogin')]"
                    },
                    "administratorPassword": {
                        "value": "[parameters('administratorPassword')]"
                    },
                    "firewallRules": {
                        "value": "[reference('firewallRulesDeployment').outputs.outputArray.value]"
                    },
                    "allowAzureIps": {
                        "value": "Disabled"
                    },
                    "databaseForMySqlName": {
                        "value": "[parameters('databaseForMySqlName')]"
                    },
                    "databaseSkuName": {
                        "value": "[parameters('databaseSkuName')]"
                    },
                    "sslEnforcement": {
                        "value": "Disabled"
                    },
                    "mysqlVersion": {
                        "value": "8.0"
                    },
                    "tagValues": "[parameters('tags')]"
                }
            }
        }

    ],
    "outputs": {
    }
}